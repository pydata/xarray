<table>
    <tr>
        <td>
            <table style="border-collapse: collapse;">
                <thead>
                    <tr>
                        <td> </td>
                        <th> Array </th>
                    </tr>
                </thead>
                <tbody>
                    {% if nbytes %}
                    <tr>
                        <th> Bytes </th>
                        <td> {{ nbytes }} </td>
                    </tr>
                    {% endif %}
                    <tr>
                        <th> Shape </th>
                        <td> {{ array.shape }} </td>
                    </tr>
                    <tr>
                        <th> Data type </th>
                        <td colspan="2"> {{ array.dtype }}</td>
                    </tr>
                </tbody>
            </table>
        </td>
        <td>
        {{grid}}
        </td>
    </tr>
</table>
